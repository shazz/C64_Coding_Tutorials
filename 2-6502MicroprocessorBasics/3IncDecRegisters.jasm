!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	ldy #color.cyan		; y = 3 (cyan)
	sty vic.border_col	; border = y
	iny					; y = 4 (purple)
	sty vic.bck_col		; window = y
	jmp loop
}

