!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	ldx #$20			; x = $20
	lda #color.cyan	; a = 3 (cyan)
	sta vic.start,x		; $d000+$20 = $d020 (border) = a
	sta vic.start+1,x	; $d001+$20 = $d021 (window) = a
	jmp loop
}
