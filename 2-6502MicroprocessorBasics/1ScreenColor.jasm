!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	lda #color.cyan  	; acc 3 (cyan)
	sta vic.bck_col 	; set window color to a=3
	sta vic.border_col 	; set border color to a=3
	jmp loop  			; loop
}

