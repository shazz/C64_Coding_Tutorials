!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	lda #$00			; a = 0
	sta vic.border_col	; set border to black (0)
	clc					; clear carry
	adc #$08			; a=a+8
	sta vic.bck_col		; set window color to 8 (orange)
	jmp loop
}
