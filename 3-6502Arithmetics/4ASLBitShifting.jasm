!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	lda #$00			; a = 0
	sta vic.border_col	; border = 0 (black)
	clc					; clear carry
	adc #$04			; a=a+4
	sta vic.bck_col		; set window to purple (4)
	asl vic.bck_col		; window = window << 1 = 8 (orange)
	jmp loop			; per block the window should change from orange to purple
}


