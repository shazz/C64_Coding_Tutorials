; ------------------------------------------------------------------------------------------
; Macros
; ------------------------------------------------------------------------------------------
!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry:
    jmp add8_to_16
    
add8_to_16:
    clc		
	lda nb16+0
	adc #1
	sta nb16+0
    bcc sub8_to_16             
    inc nb16+1

sub8_to_16:
    sec
	lda nb16+0
	sbc #1
	sta nb16+0
    bpl end             
    dec nb16+1    

end:
    brk

nb16: !word 0


