!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	ldy #color.black	; y = 0 (black)
	sty vic.border_col	; set border to black
	iny					; y = y + 8
	iny
	iny
	iny
	iny
	iny
	iny
	iny
	sty vic.bck_col		; set window color to 8 (orange)
	jmp loop
}

