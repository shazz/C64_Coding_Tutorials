!include "../macros/macros.jasm"

; ------------------------------------------------------------------------------------------
; Plugins
; ------------------------------------------------------------------------------------------

; ------------------------------------------------------------------------------------------
; Program
; ------------------------------------------------------------------------------------------
+basic_start(entry)

;--------------------------------------------------------------
; Execution starts here
;--------------------------------------------------------------
entry: {
loop:
	lda #color.orange	; a=8 (orange)
	sta vic.border_col	; set border to a=orange
	sec					; set carry
	sbc #$08			; a=a-8 = 0 (black)
	sta vic.bck_col		; set window to a=0
	jmp loop
}

